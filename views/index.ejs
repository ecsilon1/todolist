<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Template</title>
  </head>
  <body>
    <link rel="stylesheet" href="styles.css">

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>


<div class="box" >




    <%  newListItem.forEach(function(index){%>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=index._id%>" onChange="this.form.submit()">

      <p><%= index.name %></p>
      </div>
      <input type="hidden" name="hiddenList" value=<%= listTitle %>>
      </input>
      </form>




  <%   }) %>


  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item">
  <button type="submit" name="list" value=<%=listTitle%>>+</button>
  </form>

</div>



  </body>
</html>
